<script>
    require([
        'jquery',
        'mage/url'
    ], function ($, url) {
        var stripe, card;
        $('#add-stripe-card-action').on("click", function (e) {
            e.preventDefault();
            if (typeof Stripe === "undefined") {
                loadStripeApi();
            }
        });
        $('#btn-stripe-submitcard').on("click", function (e) {
            $('#btn-stripe-submitcard').prop("disabled", true);
            $('body').trigger('processStart');
            e.preventDefault();
            stripe.createSource(card).then(function (result) {
                if (result.error) {
                    var errorElement = document.getElementById('card-errors');
                    errorElement.textContent = result.error.message;
                    $('#btn-stripe-submitcard').prop("disabled", false);
                    $('body').trigger('processStop');
                } else {
                    $.post(
                        url.build('stripe/customer/createCard'),
                        {
                            'form_key': $.cookie('form_key'),
                            'result': result
                        },
                        function (response) {
                            if(response.success){
                                location.reload();
                            }
                            if(response.error){
                                $('#btn-stripe-submitcard').prop("disabled", false);
                                $('body').trigger('processStop');
                                alert(response.message);
                            }
                        },
                        'json'
                    )
                }
            });
        });

        function loadStripeApi() {
            var elementScript = document.createElement('script');
            elementScript.onload = function () {
                stripe = Stripe('<?= /* @noEscape */ $block->getStripePublickey() ?>');
                var style = {
                    base: {
                        color: '#32325d',
                        lineHeight: '18px',
                        fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
                        fontSmoothing: 'antialiased',
                        fontSize: '16px',
                        '::placeholder': {
                            color: '#aab7c4'
                        }
                    },
                    invalid: {
                        color: '#fa755a',
                        iconColor: '#fa755a'
                    }
                };

                elements = stripe.elements();
                card = elements.create('card', {
                    style: style
                });

                card.mount('#card-element');
                card.addEventListener('change', function(event) {
                    var displayError = document.getElementById('card-errors');
                    if (event.error) {
                        displayError.textContent = event.error.message;
                    } else {
                        displayError.textContent = '';
                    }
                });
                $('#stripe-creditcard-form').slideDown(500);
            };
            elementScript.onerror = function (response) {
                console.log("stripe js v3 load error");
                console.log(response);
            };
            elementScript.src = "https://js.stripe.com/v3/";
            document.head.appendChild(elementScript);
        }
    })
</script>

